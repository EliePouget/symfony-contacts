{% extends 'base.html.twig' %}

{% block title %}{{ contact.lastname}} {{ contact.firstname }}{% endblock %}
{% block body %}
    <h1>{{ contact.lastname}} {{ contact.firstname }}</h1>
    <dl>
        <dt>Nom</dt>
        <dd>{{ contact.lastname }}</dd>
        <dt>Prénom</dt>
        <dd>{{ contact.firstname }}</dd>
        <dt>Email</dt>
        <dd>{{ contact.email }}</dd>
        <dt>Numéro de téléphone</dt>
        <dd>{{ contact.phone }}</dd>
        <dt>Catégorie</dt>
        <dd>{{ contact.categories.name ?? "Aucune catégorie"}}</dd>
    </dl>

{% endblock %}



