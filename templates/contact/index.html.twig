{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
<style>
    .main { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .main code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="main">
    <h1>Liste des contacts</h1>
    <ul>
        {% for contact in contactList %}
        <li>
            <a href="{{ path('app_contact_id', {id: contact.id}) }}">{{ contact.lastname }}, {{ contact.firstname }}</a>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
